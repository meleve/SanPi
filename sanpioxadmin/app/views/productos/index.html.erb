<div class='panel panel-default'>
   <div class="panel-heading">
      <h2>
      <center>Stock de Productos<%= link_to glyph(:plus_sign), new_producto_path, class: 'btn btn-primary btn-sm tip pull-right', title: 'Nuevo' %></center>
      </h2>
   </div>
</div>

<table class="table table-striped table-hover table-condensed dt-responsive" id="datatable">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Descripci√≥n</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombreproduct %></td>
        <td><%= producto.descripcion %></td>
        <td><%= producto.cantidad %></td>
        <td><%= producto.precio %></td>
        <td><%= link_to glyph(:eye_open)+'', producto, class: 'btn btn-link btn-sm'  %></td>
        <td><%= link_to glyph(:pencil)+'', edit_producto_path(producto), class: 'btn btn-link btn-sm' %></td>
        <td><%= link_to glyph(:remove)+'', producto, method: :delete, class: 'btn btn-link btn-sm' ,data: { confirm: 'Esta seguro que desea eliminar '+ producto.nombreproduct } %></td>
      </tr>
    <% end %>
  </tbody>
</table>