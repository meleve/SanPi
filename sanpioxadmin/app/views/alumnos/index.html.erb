<div class="page-header">
  <h1>
  Lista de Alumnos <%= link_to glyph(:plus_sign)+ 'Agregar', new_alumno_path, class: 'btn btn-primary btn-sm pull-right' %>
  </h1>
</div>
<table class="table table-striped table-hover table-condensed dt-responsive" id="datatable">
  <thead>
    <tr>
      <th>C.I.Nº</th>
      <th>Nombres y Apellidos</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.ci %></td>
        <td><%= alumno.nombre %> <%= alumno.apellido %></td>
        <td><%= link_to glyph(:eye_open)+'', alumno, class: 'btn btn-link btn-sm' %> 
            <%= link_to glyph(:pencil)+'', edit_alumno_path(alumno), class: 'btn btn-link btn-sm' %> 
            <%= link_to glyph(:remove)+'', alumno, class: 'btn btn-link btn-sm', method: :delete, data: { confirm: 'Está seguro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


