<h1>Cursos <%= link_to 'Nuevo Curso', new_curso_path, class: 'btn btn-primary btn-sm ' %></h1>
<div class=" table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Curso</th>
      <th>Especialidad</th>
      <th>Seccion</th>
      <th>AÃ±o</th>

      <!--<th>Cantidad</th>
      <th>Descripcion</th>
      <th>Vencimiento</th>
      <th>Importe</th>
      <th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.curso %></td>
        <td><%= curso.especialidad %></td>
        <td><%= curso.seccion %></td>
        <td><%= curso.year %></td>

        <% curso.detalle_cursos.each do |detalle| %>
        <!--<td><%= detalle.curso_id %></td>
        <td><%= detalle.cantidad %></td>
        <td><%= detalle.descripcion %></td>
        <td><%= detalle.vencimiento %></td>
        <td><%= detalle.importe %></td>-->
        <% end %>

        <td><%= link_to 'Show', curso %></td>
        <td><%= link_to 'Edit', edit_curso_path(curso) %></td>
        <td><%= link_to 'Destroy', curso, method: :delete, data: { confirm: 'Estas seguro que desea eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>



