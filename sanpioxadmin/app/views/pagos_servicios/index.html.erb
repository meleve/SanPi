<div class="page-header">
  <h1>Pago de Servicios
  <%= link_to glyph(:plus_sign)+'Pagar', new_pagos_servicio_path, class: 'btn btn-primary btn-sm pull-right' %>
  </h1>
</div>
<table class="table table-striped table-hover table-condensed dt-responsive" id="datatable">
  <thead>
    <tr>
      <th>Servicio</th>
      <th>Monto</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pagos_servicios.each do |pagos_servicio| %>
      <tr>
        <td><%= pagos_servicio.servicio %></td>
        <td><%= pagos_servicio.monto %></td>
        <td><%= link_to glyph(:eye_open)+'', pagos_servicio, class: 'btn btn-link btn-sm' %>
          <%= link_to glyph(:pencil)+'', edit_pagos_servicio_path(pagos_servicio), class: 'btn btn-link btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


