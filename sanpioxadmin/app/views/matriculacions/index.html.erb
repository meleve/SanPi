<div class="page-header">
  <h1>
    Matriculación <%= link_to glyph(:plus_sign)+ 'Matricular', new_matriculacion_path, class: 'btn btn-primary btn-sm pull-right' %>
    
  </h1>
</div>
<%= form_tag edit_multiple_matriculacions_path, method: :get  do %>
  <table class="table table-striped table-hover table-condensed dt-responsive" id="datatable" >
    <thead>
      <tr>
        <th>Alumno</th>
        <th>Curso</th>
        <th>Año</th>
        <th><input type="checkbox" id="selectAll" value="selectAll"></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @matriculacions.each do |matriculacion| %>
        <tr>
          <td><%= matriculacion.alumno.nombre %></td>
          <td><%= matriculacion.curso.curso %></td>
          <td><%= matriculacion.curso.year %></td>
          <td><%= check_box_tag "matriculacions_id[]", matriculacion.id %></td>
          <td><%= link_to glyph(:eye_open)+'', matriculacion, class: 'btn btn-link btn-sm' %></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>


<%= submit_tag "Matricular", class: "btn btn-primary btn-sm pull-right" %>
<% end %>
    
<script type="text/javascript">
  $('#selectAll').click(function() {
   if (this.checked) {
       $(':checkbox').each(function() {
           this.checked = true;                        
       });
   } else {
      $(':checkbox').each(function() {
           this.checked = false;                        
       });
   } 
  });
</script>

