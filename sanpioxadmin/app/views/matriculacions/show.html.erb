<div class="page-header">
  <h2>
    Cuenta Corriente
  </h2>
</div>
<div class="row">
  <div class="col-lg-3">
    <div class="form-group">
      <label class="control-label col-lg-12">Alumno:</label>
      <div class="col-lg-12">
        <span class="form-control">
          <%= @matriculacion.alumno.nombre %> <%= @matriculacion.alumno.apellido %>
        </span>
      </div>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="form-group">
      <label class="control-label col-lg-12">Curso:</label>
      <div class="col-lg-12">
        <span class="form-control">
          <%= @matriculacion.curso.curso %> <%= @matriculacion.curso.especialidad %> <%= @matriculacion.curso.year %>
        </span>
      </div>
    </div>
  </div>

  <div class="col-lg-2">
    <div class="form-group">
      <label class="control-label col-lg-3">Saldo:</label>
      <div class="col-lg-12">
        <span class="form-control">
          <%= @cta_cte.montoimporte %>
        </span>
      </div>
    </div>
  </div>

  <div class="col-lg-1">
    <div class="form-group">
      <label class="control-label col-lg-12">NÂº:</label>
      <div class="col-lg-12">
        <span class="form-control">
         <%= @cta_cte.nro_cta_cte %>
        </span>
      </div>
    </div>
  </div>
</div>
<hr />
<table class="table table-striped table-hover table-condensed dt-responsive" id="datatable">
  <thead>
    <tr>
      
      <th>Cta cte</th>
      <th>Nro mov</th>
      <th>Descripcion</th>
      <th>Importe</th>
      <th>Importe</th>
      <th>Estado</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movimientos.each do |movimiento| %>
      <tr>
        <td><%= movimiento.cta_cte_id %></td>
        <td><%= movimiento.nro_mov %></td>
        <td><%= movimiento.descripcion %></td>
        <td><%= movimiento.importe %></td>
        <td><%= movimiento.totalimporte %></td>
        <% if movimiento.estado == false %>
        	<td><label class="label label-warning">Pendiente</label></td>
        <% else %>
        	<td><label class="label label-success">Pagado</label></td>
        <% end %>
        <th>
        	<%= link_to 'Pagar', edit_movimiento_path(movimiento.id) %>
        </th>
        
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Editar', edit_matriculacion_path(@matriculacion) %> |
<%= link_to 'Salir', matriculacions_path %>

