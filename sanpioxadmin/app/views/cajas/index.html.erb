<div class='panel panel-default'>
   <div class="panel-heading">
      <h2>
      <center>Apertura de Caja <%= link_to glyph(:ok_circle) + ' Abrir Caja', new_caja_path, class: 'btn btn-primary btn-sm pull-right' %></center>
      </h2>
   </div>
</div>

<table class="table table-striped table-hover table-condensed dt-responsive" id="datatable">
  <thead>
    <tr>
      <th>Caja</th>
      <th>Fecha Apertura</th>
      <th>Fecha Cierre</th>
      <th>Apertura</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cajas.each do |caja| %>
      <tr>
        <td><%= caja.usuario.email %></td>
        <td><%= caja.fechaApertura.strftime('%d/%m/%Y') %></td>
        <td><%= caja.fechaCierre %></td>
        <td><%= caja.apertura %></td>
        <td class="hidden"><%= caja.cierre %></td>
        <td class="hidden"><%= caja.entrada %></td>
        <td class="hidden"><%= caja.salida %></td>
        <td class="hidden"><%= caja.estado %></td>
        <td><%= link_to  glyph(:eye_open)+'', caja, class: 'btn btn-link btn-sm' %></td>
        <% if caja.estado == false %>
          <td><%= link_to glyph(:remove_sign)+'', edit_caja_path(caja), class: 'btn btn-link btn-sm tip', title: "Cerrar Caja"  %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


