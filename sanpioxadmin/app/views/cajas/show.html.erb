
<div class="panel panel-default">
  <div class="panel-heading">
      <h4><center>INFORME DE CAJA</center></h4>
    </div>
  <div class="panel-body">
    <div class="col-lg-4">
      <div class="form-group">
      <label class="control-label col-lg-4"> Usuario:</label>
        <div class=" col-lg-12">
          <span class="form-control">
          <%= @caja.usuario.email %>
          </span>
        </div>  
      </div>
    </div>

    <div class="col-lg-4">
      <div class="form-group">
      <label class="control-label col-lg-12"> Fecha de apertura:</label>
        <div class=" col-lg-12">
          <span class="form-control">
          <%= @caja.fechaApertura.strftime('%m/%d/%Y') %>
          </span>
        </div>  
      </div>
    </div>

    <div class="col-lg-4">
      <div class="form-group">
      <label class="control-label col-lg-12"> Fecha de cierre:</label>
        <div class=" col-lg-12">
          <span class="form-control">
          <%= @caja.fechaCierre %>
          </span>
        </div>  
      </div>
    </div>

    <div class="col-lg-4">
      <div class="form-group">
      <label class="control-label col-lg-4"> Apertura:</label>
        <div class=" col-lg-12">
          <span class="form-control">
          <%= @caja.apertura %>
          </span>
        </div>  
      </div>
    </div>

    <div class="col-lg-4">
      <div class="form-group">
      <label class="control-label col-lg-4"> Cierre:</label>
        <div class=" col-lg-12">
          <span class="form-control">
          <%= @caja.cierre %>
          </span>
        </div>  
      </div>
    </div>

    <div class="col-lg-4">
      <div class="form-group">
      <label class="control-label col-lg-4"> Entrada:</label>
        <div class=" col-lg-12">
          <span class="form-control">
          <%= @caja.entrada %>
          </span>
        </div>  
      </div>
    </div>
    
    <div class="col-lg-4">
      <div class="form-group">
      <label class="control-label col-lg-4"> Salida:</label>
        <div class=" col-lg-12" >
          <span class="form-control">
          <%= @caja.salida %>
          </span>
        </div>  
      </div>
    </div>
    
    <div class="hidden">
      <p>
        <strong>Estado:</strong>
        <%= @caja.estado %>
      </p>
    </div>  
          
  </div>  
</div>

<div class="panel panel-default">
<div class="panel-body">
  <div class="row">
    <div class="col-lg-12">
      <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed dt-responsive" id="datatable">
              <thead>
                <tr>
                  <th>Caja Nro</th>
                  <th>Concepto</th>
                  <th>Ingreso</th>
                  <th>Egreso</th>
                  <th>Saldo</th>
                </tr>
              </thead>

              <tbody>
                <% @mov_caja.each do |mov| %>
                  <tr>
                    <td><%= mov.caja_id %></td>
                    <td><%= mov.concepto %></td>
                    <td><%= mov.ingreso %></td>
                    <td><%= mov.egreso %></td>
                    <td><%= mov.saldo %></td>
                  </tr>
                <% end %>
              </tbody>
        </table>
      </div>
    </div>
  </div>
  </div>
  </div>


