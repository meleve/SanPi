<div class="col-lg-4 col-lg-offset-4 well">
  <fieldset>
<legend><center>Iniciar sesión</center></legend>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="input-group input-group-lg">
      <span class="input-group-addon" id="sizing-addon1">
      <span class = "glyphicon glyphicon-user"></span>
      </span>
      <%= f.email_field :email, autofocus: true,placeholder: 'Usuario', class: 'form-control ', require: '' %>
    </div><br>

    <div class="input-group input-group-lg">
      <span class="input-group-addon" id="sizing-addon1">
        <span class= "glyphicon glyphicon-lock"></span>
      </span>
      <%= f.password_field :password, autocomplete: "off",placeholder: 'Contraseña', class: 'form-control', require: '' %>
    </div>

    <!--<% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :Recordar %>
      </div>
    <% end -%>-->
    <br>

    <div class="form-group">
      <%= button_tag(type: 'submit', class: "btn btn-success btn-block") do %>
        <span class="glyphicon glyphicon-log-in"></span> Entrar
      <% end %>
    </div>
        <!--<%= render "usuarios/shared/links" %>-->
  </fieldset>
  <% end %>
</div>
